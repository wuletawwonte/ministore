
<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">

  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <%= link_to root_path do %>
      <%= image_tag 'amu_logo.png', class: 'mx-auto h-20 w-auto' %>
    <% end %>
    <h2 class="mt-8 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Sign in to your account</h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div>
        <%= f.label :email, class: 'block text-sm font-medium leading-6 text-gray-900' %>
        <div class="mt-2">
          <%= f.email_field :email, placeholder: 'wuletaw.wonte@amu.edu.et', autocomplete: 'email', class: 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6' %>
        </div>
      </div>

      <div>
        <div class="flex items-center justify-between">
          <%= f.label :password, class: 'block text-sm font-medium leading-6 text-gray-900' %>
        </div>
        <div class="mt-2">
          <%= f.password_field :password, placeholder: 'password', autocomplete: 'current-password', class: 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6' %>
        </div>
      </div>

      <!-- Remember me checkbox -->
      <div class="mb-3 mt-3 flex items-center justify-between">
        <% if devise_mapping.rememberable? %>
          <div class="mb-[0.125rem] block min-h-[1.5rem] pl-1">
            <%= f.check_box :remember_me, class: 'text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600' %>
            <%= f.label :remember_me, class: 'ml-1 text-sm font-medium text-gray-900 dark:text-gray-300 ' %>
          </div>
        <% end %>

        <%= link_to 'Forgot password?', new_user_password_path, class: 'text-primary transition duration-150 ease-in-out hover:text-primary-600 focus:text-primary-600 active:text-primary-700 dark:text-primary-400 dark:hover:text-primary-500 dark:focus:text-primary-500 dark:active:text-primary-600' %>
      </div>

      <div class="mt-3">
        <%= f.submit 'Log in', class: 'flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600' %>
      </div>

    <% end %>


    <p class="mt-10 text-center text-sm text-gray-500">
      Don't have account?
      <%= link_to 'Register', new_user_registration_path, class: 'font-semibold leading-6 text-indigo-600 hover:text-indigo-500' %>
    </p>

  </div>
</div>
